
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>@ViewBag.Title - HotelBooking</title>
    <!-- Bootstrap core CSS -->
    <!-- Custom styles for this template -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.2/css/all.min.css" />
    <link href="~/Areas/Dashboard/Public/css/simple-sidebar.css" rel="stylesheet" />
    <link href="~/Areas/Dashboard/Public/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

    <script src="~/Areas/Dashboard/Public/vendor/jquery/jquery.min.js"></script>
</head>

<body>

    <div class="d-flex" id="wrapper">

        <!-- Sidebar -->
        <div class="bg-light border-right" id="sidebar-wrapper">
            <div class="sidebar-heading">Hotel Booking </div>
            <div class="list-group list-group-flush">
                <a href="@Url.Action("Index", "StayType")" class="list-group-item list-group-item-action bg-light"><i class="far fa-building mr-1"></i>Otaqlar</a>
                <a href="@Url.Action("Index", "Roles")" class="list-group-item list-group-item-action bg-light"><i class="fas fa-shield-alt"></i>Roles</a>
                <a href="@Url.Action("Index", "Users")" class="list-group-item list-group-item-action bg-light"><i class="fas fa-users mr-1"></i>Users</a>
            </div>
        </div>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">

            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <button class="btn btn-primary" id="menu-toggle"><i class="fas fa-bars"></i></button>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
                        <li class="nav-item active">
                        
                        </li>
                        
                  
                    </ul>
                </div>
            </nav>

            <div class="container-fluid">

                @RenderBody()

               
            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->
    <!-- Bootstrap core JavaScript -->
    
    <script src="~/Areas/Dashboard/Public/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Menu Toggle Script -->
    <script>
    $("#menu-toggle").click(function(e) {
      e.preventDefault();
      $("#wrapper").toggleClass("toggled");
    });
    </script>

</body>

</html>
