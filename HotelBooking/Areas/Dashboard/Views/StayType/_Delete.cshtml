@model HotelBooking.Areas.Dashboard.ViewModels.StayTypeActionModels

@if (Model != null)
{
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Modal title</h5>
           
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <form id="actionForm">
                <input type="hidden" name="Id" value="@Model.Id" />
           

              <div class="alert alert-danger" role="alert">
                  Are you sure?
              </div> 


            </form>
            <div class="errormes">

            </div>

        </div>
        <div class="modal-footer">
            @*<button id="actionButton" type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>*@
            <button  id="actionButton" type="button" class=" btn btn-primary"  data-dismiss="modal">Delete</button>
        </div>
    </div>


}
<script>
    $("#actionButton").click(function () {

        $.ajax({
            url: '@Url.Action("Delete", "StayType")',
            type: "post",
            data: $("#actionForm").serialize()
        })
            .done(function (response) {

                if (response.Success) {

                    location.reload();

                } else {
                    $(".errormes").html(response.Message)
                }

            });
    });
</script>
