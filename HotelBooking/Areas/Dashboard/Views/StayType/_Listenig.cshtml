@model HotelBooking.Areas.Dashboard.ViewModels.StayTypeListingModels

@if (Model != null && Model.StayTypes != null && Model.StayTypes.Count() > 0)
{
    <table class="table table-bordered">
        <thead>
            <tr>

                <th scope="col">Fullname</th>
                <th scope="col">Desc</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var staytype in Model.StayTypes)
            {
                <tr>

                    <td>@staytype.Name</td>

                    <td>@staytype.Desc</td>
                    <td>
                        <button data-href="@Url.Action("Action", "StayType", new {Id =staytype.Id}) "  type="button" class="data-btn btn btn-success"  data-toggle="modal" data-target="#actionModal">Edit</button>
                        <button  data-href="@Url.Action("Delete", "StayType", new {Id =staytype.Id}) " type="button" class="data-btn btn btn-danger"  data-toggle="modal" data-target="#actionModal">Delete</button>
                    </td>
                </tr>
            }


        </tbody>
    </table>

}
else
{
    <div class="alert alert-warning" role="alert">
       Otelde müştəri yooxdur!
    </div>
}
